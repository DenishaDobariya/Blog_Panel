<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css"> 
</head>
<body>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">BlogSite</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blogs/add">Add Blog</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1>All Blogs</h1>
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <% if (blog.image) { %>
                            <img src="/uploads/<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                            <p class="card-text"><small class="text-muted">By <%= blog.author.username %></small></p>
                            <a href="/blogs/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
                            <a href="/blogs/delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Â© 2024 BlogSite. All rights reserved.</span>
        </div>
    </footer>

    <script src="/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
